package string;

public class CountOnlyLowerCharacterInString {
public static void main(String[] args) {
	String str="I learn Java";
	countLowerCharacter(str);
}
public static void countLowerCharacter(String str)
{
	int count=0;
	for(int i=0;i<str.length();i++)
	{
		if(str.charAt(i)>='a' && str.charAt(i)<='z')
		{
			count++;
		}
	}
	System.out.println("Count of Lowercase Character is: "+count);
}
}
