package string;

public class StoreOnlyVowelInNewString {
public static void main(String[] args) {
	String str="Java Is Easy";
	store(str);
}
public static void store(String str)
{
	String res="";
	char ch[]=str.toCharArray();
	for(char c:ch)
	{
		if(c=='a' || c=='e' || c=='i'|| c=='o' ||c=='u'||
				c=='A' || c=='E' || c=='I'|| c=='O' ||c=='U')
		{
			res=res+c;
		}
	}
	System.out.println("Vowel in String are: "+res);
}
}
